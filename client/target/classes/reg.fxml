<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.RegController"
      alignment="CENTER">

    <HBox>
        <Label text = "Login:" prefWidth="100" />
        <TextField fx:id="loginField" promptText="login" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox>
        <Label text = "Password:" prefWidth="100" />
        <PasswordField fx:id="passwordField" promptText="password" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox>
        <Label text = "Nickname:" prefWidth="100" />
        <TextField fx:id="nicknameField" promptText="nickname" HBox.hgrow="ALWAYS"/>
    </HBox>

    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS"/>
    <Button text="Registration" onAction="#tryToReg"/>

</VBox>
